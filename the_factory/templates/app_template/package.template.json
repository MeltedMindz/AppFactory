{
  "name": "{{APP_NAME_SLUG}}",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios", 
    "web": "expo start --web",
    "build:ios": "eas build --platform ios",
    "build:android": "eas build --platform android",
    "submit:ios": "eas submit --platform ios",
    "submit:android": "eas submit --platform android",
    "validate": "npm run validate:deps && npm run validate:doctor && npm run validate:typescript",
    "validate:deps": "npx expo install --check",
    "validate:doctor": "npx expo-doctor",
    "validate:typescript": "npx tsc --noEmit --skipLibCheck",
    "validate:build": "npx expo export --platform ios --clear --dev",
    "postinstall": "npx expo install --fix",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "expo": "~52.0.0",
    "react-native": "0.76.0",
    "react": "18.3.1",
    "expo-router": "^4.0.0",
    "react-native-purchases": "^8.0.0",
    "react-native-purchases-ui": "^8.0.0",
    "zustand": "^4.5.0",
    "@react-native-async-storage/async-storage": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.3.0",
    "typescript": "~5.9.0",
    "prettier": "^3.0.0",
    "eslint": "^8.57.0",
    "eslint-config-expo": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "private": true
}